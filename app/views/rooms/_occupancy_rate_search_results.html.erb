<% if @valid_search %>
  <div class="row mt-2 pl-3">
    <div class="col pl-0 pr-0">
      <div class="card text-white bg-info mb-3 mr-4 col-md col-sm-12">
        <div class="card-body pb-4 pl-1">
          <h1 class="card-title">
            <%= @occupancy_rate %><small>%</small>
          </h1>
          <p class="card-text font-italic mb-0">from <b><%=@start_date%></b> to <b><%= @end_date %></b>, total <b><%= (@end_date - @start_date).to_i+1 %></b> days</p>
          <p class="card-text font-italic small">due to <%= pluralize(@total_reservations, 'reservation') %> across all rooms</p>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="row mt-2 pl-3">
    <div class="col pl-0 pr-0">
      <p class="text-danger"> Invalid search. Verify the chosen dates and try again. </p>
    </div>
  </div>
<% end %>
